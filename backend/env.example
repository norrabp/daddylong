# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fastapi_boilerplate
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/fastapi_boilerplate_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6380/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
ENVIRONMENT=development
API_V1_STR=/api/v1
PROJECT_NAME=FastAPI React PostgreSQL Boilerplate

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Email Settings (optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# First Superuser
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123 